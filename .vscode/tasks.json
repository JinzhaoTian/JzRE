{
    "tasks": [
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "all"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Builds the project using CMake and MinGW Makefiles"
        },
        {
            "label": "G++: Build",
            "type": "cppbuild",
            "command": "C:/Program Files/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++2a",
                "-g", // 添加调试选项
                "${workspaceFolder}/JzRE/source/**",
                "${workspaceFolder}/main.cpp",
                "-I",
                "${workspaceFolder}/JzRE/include",
                "-I",
                "${workspaceFolder}/dependencies/include",
                "-L",
                "${workspaceFolder}/dependencies/lib",
                "-lglfw3",
                "-lassimp",
                "-lz",
                "-lopengl32",
                "-lgdi32",
                "-o",
                "${workspaceFolder}/output/JzRE.exe",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}