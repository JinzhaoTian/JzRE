{
    "tasks": [
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "all"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Builds the project using CMake"
        },
        {
            "label": "G++: Build (Windows)",
            "type": "cppbuild",
            "command": "C:/Program Files/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++2a",
                "-g",
                "${workspaceFolder}/JzRE/source/**",
                "${workspaceFolder}/main.cpp",
                "-I",
                "${workspaceFolder}/JzRE/include",
                "-I",
                "${workspaceFolder}/dependencies/include",
                "-L",
                "${workspaceFolder}/dependencies/lib",
                "-lglfw3",
                "-lassimp",
                "-lz",
                "-lopengl32",
                "-lgdi32",
                "-o",
                "${workspaceFolder}/output/JzRE.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Builds the project using G++ on Windows"
        },
        {
            "label": "Clang++: Build (macOS)",
            "type": "cppbuild",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-std=c++2a",
                "-g",
                "${workspaceFolder}/JzRE/source/**",
                "${workspaceFolder}/main.cpp",
                "-I",
                "${workspaceFolder}/JzRE/include",
                "-I",
                "${workspaceFolder}/dependencies/include",
                "-L",
                "${workspaceFolder}/dependencies/lib",
                "-lglfw3",
                "-lassimp",
                "-lz",
                "-framework",
                "Cocoa",
                "-framework",
                "IOKit",
                "-framework",
                "CoreVideo",
                "-framework",
                "OpenGL",
                "-o",
                "${workspaceFolder}/output/JzRE"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Builds the project using Clang++ on macOS"
        }
    ],
    "version": "2.0.0"
}