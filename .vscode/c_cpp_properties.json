{
    "env": {
        "projectIncludePath": [
            "${workspaceFolder}/**",
            "${workspaceFolder}/src"
        ],
        "projectDefines": [
            "_DEBUG",
            "UNICODE",
            "_UNICODE"
        ]
    },
    "configurations": [
        {
            "name": "Win64",
            "includePath": [
                "${projectIncludePath}"
            ],
            "defines": [
                "${projectDefines}",
                "_WINDOWS",
                "WIN32_LEAN_AND_MEAN",
                "NOMINMAX"
            ],
            "compilerPath": "",
            "cStandard": "c17",
            "cppStandard": "c++20",
            "intelliSenseMode": "windows-gcc-x64",
            "configurationProvider": "ms-vscode.cmake-tools"
        },
        {
            "name": "Mac",
            "includePath": [
                "${projectIncludePath}"
            ],
            "defines": [
                "${projectDefines}",
                "__APPLE__"
            ],
            "compilerPath": "",
            "cStandard": "c17",
            "cppStandard": "c++20",
            "intelliSenseMode": "macos-clang-arm64",
            "configurationProvider": "ms-vscode.cmake-tools"
        },
        {
            "name": "Linux",
            "includePath": [
                "${projectIncludePath}"
            ],
            "defines": [
                "${projectDefines}",
                "_LINUX"
            ],
            "compilerPath": "",
            "cStandard": "c17",
            "cppStandard": "c++20",
            "intelliSenseMode": "linux-gcc-x64",
            "configurationProvider": "ms-vscode.cmake-tools"
        }
    ],
    "version": 4
}