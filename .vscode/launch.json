            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/JzRE.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
